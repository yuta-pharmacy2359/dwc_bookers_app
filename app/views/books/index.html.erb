<p id="notice"></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    <tr>
      <% @books.each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>Show</td>
      <td>Edit</td>
      <td>Destroy</td>
      <% end %>
    </tr>
  </thead>
</table>

<h2>New Book</h2>
<%= form_with model:@book, local:true do |f| %>

<div class="field">
  <label for="book-title">Title</label>
  <%= f.text_field :title %>
</div>

<div class="field">
  <label for="book-body">Body</label>
  <%= f.text_area :body %>
</div>

<div class="actions">
  <%= f.submit "Create Book" %>
</div>

<% end %>
